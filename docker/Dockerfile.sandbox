# Pre-built sandbox image with all data science libraries
# This eliminates the pip install step during container startup

FROM python:3.11-slim

# Install system dependencies for some Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install all required Python libraries
RUN pip install --no-cache-dir \
    pandas \
    numpy \
    polars \
    pyarrow \
    altair \
    vl-convert-python \
    duckdb \
    tabulate

# Create sandbox working directory
WORKDIR /sandbox

# Default command (llm-sandbox will override this)
CMD ["python"]
